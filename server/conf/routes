+nocsrf
DELETE  /api/faqNote/:id            controllers.FaqNoteController.delete_REST(id: Int)

POST    /api/invoice/:orderId       controllers.InvoiceController.createForOrder(orderId: Int)

GET     /api/order/checkout/:userId                       controllers.OrderController.getCheckout(userId: Int)
POST    /api/order/item/:productId/:quantity/:userId      controllers.OrderController.addItem(productId: Int, quantity: Int, userId: Int)

DELETE  /api/orderItem/:id          controllers.OrderItemController.delete(id: Int)

POST    /api/payment/:invoiceId     controllers.PaymentController.payInvoice(invoiceId: Int)

GET     /api/product                controllers.ProductController.getProducts
GET     /api/product/:productId     controllers.ProductController.getProduct(productId: Int)


